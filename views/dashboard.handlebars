
{{> header}}

<main>
  <h1>Your Dashboard</h1>

  <a href="/posts/new" class="btn btn-primary">Create New Post</a>

  {{#if posts.length}}
    <!-- Display a list of all posts -->
    <h2>Recent Posts</h2>
    <section class="posts-list">
      {{#each posts}}
        <article class="post">
          <h2>
            <a href="/posts/{{id}}">{{title}}</a>
          </h2>
          <p>Posted on {{createdAt}}</p>
          <div class="post-actions">
            <a href="/posts/{{id}}/edit" class="btn btn-secondary">Edit</a>
            <form action="/posts/{{id}}?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </article>
      {{/each}}
    </section>
  {{else}}
    <!-- Display a message if there are no posts -->
    <p>You have no blog posts. Create one to get started!</p>
  {{/if}}
</main>

{{> footer}}
